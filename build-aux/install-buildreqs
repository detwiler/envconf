#! /bin/sh

OS_RELEASE_FILE=${OS_RELEASE_FILE:-/etc/os-release}
SUDO=`which sudo`

pkgs_common='
autoconf
automake
coreutils
git
gzip
make
tar
'

test -r $OS_RELEASE_FILE || exit

. $OS_RELEASE_FILE

case $ID in
    alpine) $SUDO apk add $pkgs_common;;
    fedora) $SUDO dnf --assumeyes install $pkgs_common;;
    ubuntu) $SUDO apt-get --assume-yes install $pkgs_common;;
esac
